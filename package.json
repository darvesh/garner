{
	"name": "channel_helper",
	"version": "1.0.0",
	"description": "Inline telegram getting contents from members and posting it on channel",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"start": "node build/index.js",
		"dev": "nodemon build/index.js"
	},
	"keywords": [
		"telegram",
		"bot"
	],
	"author": "Darvesh",
	"license": "GPL-3.0 License",
	"dependencies": {
		"better-sqlite3": "^7.1.1",
		"dayjs": "^1.9.1",
		"ramda": "^0.27.0",
		"reflect-metadata": "^0.1.13",
		"sanctuary": "^3.1.0",
		"telegraf": "^3.38.0",
		"typeorm": "^0.2.28"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/node": "^14.6.2",
		"@types/ramda": "^0.27.11",
		"@types/sanctuary": "^3.0.3",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"eslint": "^7.4.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"prettier": "^2.0.5",
		"typescript": "^3.9.6"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": false,
		"trailingComma": "none",
		"arrowParens": "avoid",
		"printWidth": 80
	},
	"nodemonConfig": {
		"ignore": [
			"test/*",
			"docs/*",
			"node_modules/*",
			"src/**/*.ts"
		],
		"delay": "3500"
